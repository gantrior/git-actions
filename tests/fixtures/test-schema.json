{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["ticket", "comment"],
  "properties": {
    "ticket": {
      "type": "string",
      "pattern": "^[A-Z]+-[0-9]+$",
      "description": "Ticket ID (e.g., PROJ-123)"
    },
    "comment": {
      "type": "string",
      "minLength": 1,
      "description": "Comment text"
    }
  },
  "additionalProperties": false
}
