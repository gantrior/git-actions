{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["pageId", "comment"],
  "properties": {
    "pageId": {
      "type": "string",
      "pattern": "^[0-9]+$",
      "description": "Confluence page ID (numeric)"
    },
    "comment": {
      "type": "string",
      "minLength": 1,
      "description": "Comment text to post"
    }
  },
  "additionalProperties": false
}
